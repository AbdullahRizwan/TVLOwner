<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ui.home.HomeFragment">

    <TextView
        android:id="@+id/plate_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"
        android:textColor="@color/mainColor"

        />
    <TextView
        android:id="@+id/kms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"
        android:textColor="@color/mainColor"

        />

    <Button
        android:id="@+id/selectVehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Vehicle"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/transferOwnership"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transfer Ownership"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/addKilometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Kilometer"
        android:layout_marginBottom="10dp"/>


</LinearLayout>